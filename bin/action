#!/bin/bash

path=$(type -p $0)
path=${path%/*}

if [ -z "$path" -o ! -d "$path" ]
then
  echo could not find working dir
  exit 1
fi
 

. $path/init
. $bindir/loglib
. $bindir/block
. $bindir/record

trap logfinish 0

#log $prog

cd $ntdir || exit 1

for address in *
do
  [ -d $address ] || continue
  set -- $address/*
  if [ $# -gt 5 ]
  then
    if [ ! -d $address ]
    then
      log $address without dir
      continue
    fi
    block $address
    remove_record $address
  fi
done

