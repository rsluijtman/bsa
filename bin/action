#!/bin/bash

path=$(type -p $0)
path=${path%/*}

if [ -z "$path" -o ! -d "$path" ]
then
  echo could not find working dir
  exit 1
fi


. $path/init
. $bindir/record

maxtries=5

. $bindir/block
. $bindir/loglib

for address in $(noted_more_than $maxtries)
do
  if block $address
  then
    mark_blocked $address
  else
    # iptables might be in use, do not mark as blocked, try again next time
    log block $address failed
  fi
done
