[ -n "$_record_" ] && return
_record_=1

# dir noted/address/ aNNNN   : created whith failed login attempt, sshpid or
#                              random number
#                    blocked : created when blocked, when maxtries attempts
#                              were counted and address was blocked

# so subdir noted could go (first version had dir blocked)

# addr: ip address
# tag: for not unique entry eg sshpid, or empty: a unique tag will be generated
#
# start with a: counted as attempts
# start with b: blocked

record_noted(){
  address=$1
  [ -z "$address" ] && { log empty address ; exit 1 ; }
  tag=$2
  dir=$ntdir/$address
  [ -d $dir ] || mkdir -p $dir
  if [ -n "$tag" ]
  then
    tag=a$tag
  else
    while [ -z "$tag" ]
    do
      tst=ar$RANDOM
      [ -f $dir/$tst ] && tag=$tst
    done
  fi
  touch $dir/$tag
  log recording $address $tag
}

noted_addresses(){
  na=
  for a in $ntdir/*
  do
    if [ -f $a/blocked ]
    then
      continue
    fi
    na="$na ${a##*/}"
  done
  echo $na
}

attempts(){
  d=$ntdir/$1
  if [ -d $d ]
  then
    set $d/a*
    echo $#
  else
    echo 0
  fi
}

mark_blocked(){
  address=$1
  [ -z "$address" ] && { log empty address ; exit 1 ; }
  ntda=$ntdir/$address
  [ -d $ntda ] || { log no $ntda ; exit 1 ; }
  b=$ntda/blocked
  [ -f $b ] && { log already blocked $b ; return ; }
  touch $b
  log touch $b
}

# $1: time in seconds, return names of files that are older
blocked_before(){
  time=$1
  bb=
  for b in $ntdir/*/blocked
  do
    [ -f $b ] || continue
    if [ $(stat --printf=%Y $b) -lt $time ]
    then
      b=${b%/blocked}
      bb="$bb ${b##*/}"
    fi
  done
  echo $bb
}

# $1: address, return time of block
block_time(){
  address=$1
  [ -z "$address" ] && { log empty address ; exit 1 ; }
  b=$ntdir/$address/blocked 
  if [ -f $b ]
  then
    stat --printf=%Y $b
  else
    log $address not blocked
    echo ''
  fi
}

remove_blocked(){
  address=$1
  [ -z "$address" ] && { log empty address ; exit 1 ; }
  ntda=$ntdir/$address
  [ -d $ntda ] || { log no $ntda ; exit 1 ; }
  b=$ntda/blocked
  [ -f $b ] || { log not blocked, no $b ; return ; }
  if rm $ntda
  then
    log rm $ntda
  else
    log rm $address failed
  fi
}
