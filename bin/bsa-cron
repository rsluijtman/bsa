#!/bin/bash

rmlock(){
 rm /tmp/cron-bsa-running
}

exec >> /tmp/bsa-cron.log
exec 2>&1
echo '======================'
date

path=$(type -p $0)
path=${path%/*}

if [ -z "$path" -o ! -d "$path" ]
then
  echo could not find working dir
  exit 1
fi

. $path/init

if [ -f /tmp/cron-bsa-running ]
then
  echo already running
  exit 0
fi
touch /tmp/cron-bsa-running
 
trap rmlock 0

. $bindir/checkfw

. $bindir/action


